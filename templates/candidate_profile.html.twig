{% extends 'base.html.twig' %}

{% block title %}Edition du profil - Candidat{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form', 'id': 'candidate-profile-form', 'style':'margin-bottom:20vh;'}}) }}
        <h1 class="form-title">Renseignez votre profil</h1>
        {% for field in form %}
            {{ form_row(field) }}
        {% endfor %}
        <input type="submit" class="button form-btn" value="Ajouter mon CV" />
    {{ form_end(form) }}
{% endblock %}