{% extends 'base.html.twig' %}

{% block title %}Créez votre compte{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form', 'id': 'user-form', 'style': 'margin-bottom: 16vh;'}}) }}
        <h1 class="form-title">Créez votre compte</h1>
        {% for field in form %}
            {{ form_row(field) }}
        {% endfor %}
        <input type="submit" class="button form-btn" value="Enregistrer" />
    {{ form_end(form) }}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashError in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">
            {{ flashError }}
        </div>
    {% endfor %}
{% endblock %}
